<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ab_layout"
    android:background="@drawable/acbar_bg"
    >
    
<ImageButton android:id="@+id/drawer_menu"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
          
           android:src="@drawable/ic_drawermenu"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:paddingLeft="8dip"
           android:clickable="true"/>   
        <TextView android:id="@+id/user_name"
          
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="张三"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="18dip"
          android:paddingTop="2dip"
          android:gravity="center"
          android:layout_toRightOf="@id/drawer_menu"/>   
           
<TextView android:id="@+id/tv_points"
          
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="5600积分"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="18dip"
          android:paddingTop="2dip"
          android:gravity="center"
          android:layout_centerInParent="true"/>   
          

</RelativeLayout>